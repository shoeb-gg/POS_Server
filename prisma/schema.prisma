generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  first_name    String
  last_name     String
  email         String    @unique
  password      String
  phone         String
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  updates_at    DateTime  @default(now()) @db.Timestamptz(6)
  user_type_col user_type
  id            Int       @id @default(autoincrement())

  @@index([id, email, phone, created_at, updates_at], map: "index_1")
}

enum user_type {
  customer
  admin
  shop_owner
  warehouse_owner
  pos_operator
}
